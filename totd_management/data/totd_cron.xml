<odoo>
    <data>
        <record id="expired_quote_cron_tvu" model="ir.cron">
            <field name="name">Quotation: Automatically cancel Expired Quotes</field>
            <field name="active" eval="True" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <!-- Not sure if this should be Today+1 00:00:00 or Today 24:00:00 -->
            <field name="nextcall" eval="DateTime.now().strftime('%Y-%m-%d 24:00:00')" />
            <field name="user_id" ref="base.user_root" />
            <field name="model_id" ref="totd.model_totd" />
            <field name="state">code</field>
            <field name="code">model._cron_cancel_expired_quotes()</field>
            <field name="doall" eval="False" />
        </record>
    </data>
</odoo>
